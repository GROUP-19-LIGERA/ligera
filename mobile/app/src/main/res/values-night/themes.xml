<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Ligera" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="colorOnPrimaryContainer">@color/white</item>
        <item name="colorPrimaryContainer">@color/emerald_dark_variant</item>
        <item name="colorPrimary">@color/emerald</item>
        <item name="colorTertiaryContainer">@color/emerald</item>
        <item name="colorError">@color/emerald</item>
        <item name="colorErrorContainer">@color/emerald</item>
        <item name="colorOnError">@color/emerald</item>
        <item name="colorOnErrorContainer">@color/emerald</item>

        <item name="colorOnSurfaceVariant">@color/white</item>
        <item name="colorOnSecondaryContainer">@color/emerald</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:colorBackground">@color/splash_bg</item>

        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>

        <item name="buttonStyle">@style/Widget.App.Button.OutlinedButton.IconOnly</item>
    </style>

    <style name="Theme.Ligera" parent="Base.Theme.Ligera">
        <item name="android:fontFamily">@font/work_sans</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">

        <!--Container-->
        <item name="colorSurface">@android:color/transparent</item>
        <!--Inactive icon-->
        <item name="colorOnSurfaceVariant">@color/charcoal_gray</item>
        <!--Active icon-->
        <item name="colorOnSecondaryContainer">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.NavigationBarView.ActiveIndicator</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
</resources>